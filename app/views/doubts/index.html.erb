
<h1>Doubts List</h1>

<table class="table table-striped table-hover table-bordered">
   <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doubts.each do |doubt| %>
      <tr>
        <td><%= doubt.title %></td>
        <td><%= doubt.description %></td>
        <td><%= doubt.status %></td>
        <td><%= link_to 'Show', doubt %></td>
        <td><%= link_to 'Edit', edit_doubt_path(doubt) %></td>
        <td><%= link_to 'Destroy', doubt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doubt', new_doubt_path, class:"btn btn-secondary" %>
