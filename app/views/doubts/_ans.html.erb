<h1>Resolving Doubt</h1> 
<h2>Add a comment:</h2>
        <%= form_with model: [ @doubt, @doubt.comments.build ] do |form| %>
        <p>
          <%= form.label :commenter %><br>
          <%= form.text_field :commenter %>
        </p>
        <p>
          <%= form.label :body %><br>
          <%= form.text_area :body %>
        </p>
        <p>
          <%= form.submit %>
        </p>
      <% end %>